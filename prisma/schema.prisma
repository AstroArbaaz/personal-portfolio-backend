// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modeling my Database

// user

model Admin {
  id String @id @default(cuid()) @unique
  username String @unique
  firstname String
  lastname String
  email String @unique
  password String
}

// Blogs
model Blog {
  id String @id @default(cuid()) @unique
}

// Images
model Image {
  id String @id @default(cuid()) @unique
}

// Projects
model Project {
  id String @id @default(cuid()) @unique
}

// contents for Web-Page
model Content {
  id String @id @default(cuid()) @unique
  
}